!!!5
%html
  %head
    %title JqmApp
    = stylesheet_link_tag "jquery.mobile"
    = javascript_include_tag :defaults
    = javascript_include_tag "jquery.mobile-1.0a3.min"
    = csrf_meta_tag
  
  %body
    
    %div{:data => {:role => "page", :theme => "b"}}
      %div{:data => {:role => 'header', :position => 'fixed'}}
        = yield(:header)
        = link_to 'Home', posts_url, :class => "ui-btn-right", :rel => "external", 'data-icon' => 'home'
        = link_to 'New post', new_post_url, :class => "ui-btn-left", :rel => "external", 'data-icon' => 'plus'
      
      %div{:data => {:role => 'content'}}
        = yield
      
      %div.ui-bar{:data => {:role => 'footer', :position => 'fixed'}}
        = yield(:footer)
        = link_to "About", "http://devteam.sales-lentz.lu",:class => "ui-btn-right", :target => "_blank", 'data-icon' => 'info'